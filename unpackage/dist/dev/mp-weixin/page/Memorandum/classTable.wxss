.linear_button {
  background-image: linear-gradient(to right bottom, #b28ff2, #00ACD7, #b892fb);
}
.linear_back {
  background-image: linear-gradient(to bottom, #51BDE7, #C6AEF1);
}
#filterImg {
  position: absolute;
  top: 0%;
  left: 0%;
  width: 100%;
  height: 100%;
  object-fit: cover;
  -webkit-filter: blur(8rpx);
          filter: blur(8rpx);
}
.radius-button {
  border: 1px solid transparent;
  border-radius: 4vh;
}
.box_shadow {
  box-shadow: 6rpx 6rpx 2rpx #b1eaf5;
}
.create {
  border: 1px solid transparent;
  border-radius: 50%;
  position: fixed;
  right: 4vw;
  bottom: 20vh;
  width: 15vw;
  height: 15vw;
  background-color: #51BDE7;
  padding: 2vw 2vw;
  box-sizing: border-box;
  border: 1rpx solid transparent;
  box-shadow: 0 0 55rpx 5rpx #4fafef;
}
.create image {
  width: 11vw;
  height: 11vw;
  size: 100%;
}
.buttonStyle1 {
  background-image: linear-gradient(to right bottom, #7867cc, #b7bafb);
}
.buttonStyle2 {
  background-image: linear-gradient(to right bottom, #c29df5, #9655fb);
}
.buttonStyle3 {
  background-image: linear-gradient(to right bottom, #a6f1ff, #4de9f9);
}
.buttonStyle4 {
  background-image: linear-gradient(to right bottom, #80e6a6, #fdf9cb);
}
.buttonStyle5 {
  background-image: linear-gradient(to right bottom, #fbcd74, #ff8e19);
}
.buttonStyle6 {
  background-image: linear-gradient(to right bottom, #75bffb, #0791ff);
}
.buttonStyle7 {
  background-image: linear-gradient(to right bottom, #ffdcfb, #ff8edb);
}
#xmxhView {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 90vw;
  margin-left: 5vw;
}
#xmxhView textarea:nth-of-type(1) {
  color: #2b2b2b;
  font-weight: bolder;
}
#xmxhView textarea:nth-of-type(2) {
  text-align: end;
}
#other {
  display: flex;
  justify-content: space-between;
  margin-left: 5vw;
  width: 90vw;
  align-items: center;
  height: 60rpx;
  margin-bottom: 20rpx;
}
#other text, #other textarea {
  line-height: 60rpx;
  height: 60rpx;
}
#other text {
  color: #424242;
}
#other textarea {
  text-align: end;
}
.classTable {
  width: 100vw;
  height: 100vh;
  padding: 5vw 2vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}
.classTable textarea {
  color: white;
}
.classTable .swiper {
  margin-top: 3vh;
  width: 100vw;
  height: 70vh;
}
.classTable .swiper textarea {
  font-size: 36rpx;
  display: inline-block;
  width: 50vw;
  height: 5vh;
}
.classTable image {
  margin-top: 3vh;
  width: 90vw;
  height: 38vh;
  margin-left: 5vw;
  size: 100%;
}
.classTable .button_view {
  display: flex;
  justify-content: space-around;
  width: 90vw;
}
.classTable .button_view button:nth-of-type(1) {
  width: 35vw;
  line-height: 8vh;
  margin-top: 5vh;
  height: 8vh;
  display: inline-block;
}
.classTable .button_view button:nth-of-type(2) {
  display: inline-block;
  width: 35vw;
  margin-top: 5vh;
  height: 8vh;
  line-height: 8vh;
}

