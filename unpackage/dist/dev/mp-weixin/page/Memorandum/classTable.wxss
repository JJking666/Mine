.radius-button {
  border: 1px solid transparent;
  border-radius: 2vh;
}
.create {
  border: 1px solid transparent;
  border-radius: 50%;
  position: fixed;
  right: 4vw;
  bottom: 20vh;
  width: 15vw;
  height: 15vw;
  background-color: #A0CFFF;
  padding: 0;
}
.create image {
  width: 15vw;
  height: 15vw;
  size: 100%;
}
#xm {
  display: inline-block;
  width: 45vw;
  margin-left: 5vw;
}
.classTable {
  width: 100vw;
  height: 100vh;
  background-color: #A0CFFF;
  padding: 5vw 2vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}
.classTable .swiper {
  margin-top: 3vh;
  width: 100vw;
  height: 47vh;
}
.classTable .swiper textarea {
  font-size: 36rpx;
  display: inline-block;
  width: 50vw;
  height: 5vh;
}
.classTable image {
  margin-top: 2vh;
  width: 100vw;
  height: 40vh;
  size: 100%;
}
.classTable button:nth-of-type(1) {
  width: 70vw;
  line-height: 8vh;
  margin-top: 13vh;
  height: 8vh;
}
.classTable button:nth-of-type(2) {
  width: 70vw;
  margin-top: 3vh;
  height: 8vh;
  line-height: 8vh;
}

