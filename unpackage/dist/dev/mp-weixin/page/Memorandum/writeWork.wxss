.radius-button {
  border: 1px solid transparent;
  border-radius: 2vh;
}
.create {
  border: 1px solid transparent;
  border-radius: 50%;
  position: fixed;
  right: 4vw;
  bottom: 20vh;
  width: 15vw;
  height: 15vw;
  background-color: #A0CFFF;
  padding: 0;
}
.create image {
  width: 15vw;
  height: 15vw;
  size: 100%;
}
#img1 {
  position: absolute;
  width: 4vh;
  height: 4vh;
  right: 3vw;
  top: 0;
}
.writeWork {
  width: 100vw;
  height: 100vh;
  background-color: #DBF1E1;
  box-sizing: border-box;
  overflow: auto;
}
.writeWork .main {
  width: 100vw;
  height: -webkit-fit-content;
  height: fit-content;
  background-color: #DBF1E1;
  padding: 1vh 3vw;
  margin-top: calc(5vh + 25px);
}
.writeWork .main textarea:nth-of-type(1) {
  width: 100%;
  height: 3vh;
  font-size: 36rpx;
  font-weight: 600;
  margin-top: 1vh;
}
.writeWork .main textarea:nth-of-type(2) {
  margin-top: 2vh;
  width: 100%;
  font-size: 28rpx;
}

