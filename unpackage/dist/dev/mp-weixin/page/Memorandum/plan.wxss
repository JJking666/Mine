.plan {
  padding: 1vh 0;
  width: 100vw;
  height: -webkit-fit-content;
  height: fit-content;
  min-height: 100vh;
}
.plan .plan-item1 {
  width: 90vw;
  height: -webkit-fit-content;
  height: fit-content;
  display: flex;
  flex-direction: column;
  background-color: white;
  border: 1rpx solid transparent;
  border-radius: 3vw;
  margin: 2vh auto;
  position: relative;
  transition: all 1s;
}
.plan .plan-item1 #deleteimg {
  width: 2vh;
  height: 2vh;
  size: 100%;
  position: absolute;
  top: 1vh;
  right: 3vw;
}
.plan .plan-item1 .planHidden {
  transition: all 0.5s ease;
  overflow: hidden;
}
.plan .plan-item1 #date {
  margin: 0 auto;
  display: inline-block;
  width: 90%;
  height: 8vh;
  font-size: 36rpx;
  font-weight: 600;
  text-align: center;
  line-height: 8vh;
  border-bottom: 1rpx double #b1eaf5;
}
.plan .plan-item1 #date1 {
  margin: 0 auto;
  display: inline-block;
  width: 90%;
  height: 4vh;
  font-size: 28rpx;
  color: #a8a8a8;
  text-align: center;
  line-height: 4vh;
}
.plan .plan-item1 .label {
  margin-left: 5vw;
  width: inherit;
  height: 4vh;
  display: block;
  overflow: hidden;
  transition: all 0.5s ease;
