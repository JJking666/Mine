.radius-button {
  border: 1px solid transparent;
  border-radius: 2vh;
}
.create {
  border: 1px solid transparent;
  border-radius: 50%;
  position: fixed;
  right: 4vw;
  bottom: 20vh;
  width: 15vw;
  height: 15vw;
  background-color: #a7dab9;
  padding: 2vw 2vw;
  box-sizing: border-box;
  border: 1rpx solid #A5A5A5;
}
.create image {
  width: 11vw;
  height: 11vw;
  size: 100%;
}
.work {
  width: 100vw;
  height: 100vh;
  box-sizing: border-box;
}
.work .work-swiper {
  height: 100vh;
}
.work .work-swiper .work-itemA {
  width: 100vw;
  height: 100%;
  background-color: #ffffff;
  margin-top: -2vh;
  padding: 3vh 0;
}
.work .work-swiper .work-itemA .options {
  margin-top: 1vh;
  width: inherit;
  height: 6vh;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
}
.work .work-swiper .work-itemA .options button {
  padding: 0px;
  width: 10vh;
  height: 5vh;
  border: 1rpx solid transparent;
  border-radius: 3rpx;
  margin: 0;
  display: inline-block;
}
.work .work-swiper .work-itemA .options button image {
  width: 5vh;
  height: 5vh;
  size: 100%;
}
.work .work-swiper .work-itemB {
  width: 100vw;
  height: 100%;
  background-color: #DBF1E1;
}
.work .create {
  position: fixed;
  right: 4vw;
  bottom: 20vh;
  width: 15vw;
  height: 15vw;
  background-color: #91bea1;
  padding: 2vw 2vw;
  box-sizing: border-box;
  border: 1rpx solid #A5A5A5;
}
.work .create image {
  width: 11vw;
  height: 11vw;
  size: 100%;
}

