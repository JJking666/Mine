.linear_button {
  background-image: linear-gradient(to right bottom, #b28ff2, #00ACD7, #b892fb);
}
.linear_back {
  background-image: linear-gradient(to bottom, #51BDE7, #C6AEF1);
}
#filterImg {
  position: absolute;
  top: 0%;
  left: 0%;
  width: 100%;
  height: 100%;
  object-fit: cover;
  -webkit-filter: blur(8rpx);
          filter: blur(8rpx);
}
.radius-button {
  border: 1px solid transparent;
  border-radius: 4vh;
}
.box_shadow {
  box-shadow: 6rpx 6rpx 2rpx #b1eaf5;
}
.create {
  border: 1px solid transparent;
  border-radius: 50%;
  position: fixed;
  right: 4vw;
  bottom: 20vh;
  width: 15vw;
  height: 15vw;
  background-color: #51BDE7;
  padding: 2vw 2vw;
  box-sizing: border-box;
  border: 1rpx solid transparent;
  box-shadow: 0 0 55rpx 5rpx #4fafef;
}
.create image {
  width: 11vw;
  height: 11vw;
  size: 100%;
}
.buttonStyle1 {
  background-image: linear-gradient(to right bottom, #7867cc, #b7bafb);
}
.buttonStyle2 {
  background-image: linear-gradient(to right bottom, #c29df5, #9655fb);
}
.buttonStyle3 {
  background-image: linear-gradient(to right bottom, #a6f1ff, #4de9f9);
}
.buttonStyle4 {
  background-image: linear-gradient(to right bottom, #80e6a6, #fdf9cb);
}
.buttonStyle5 {
  background-image: linear-gradient(to right bottom, #fbcd74, #ff8e19);
}
.buttonStyle6 {
  background-image: linear-gradient(to right bottom, #75bffb, #0791ff);
}
.buttonStyle7 {
  background-image: linear-gradient(to right bottom, #ffdcfb, #ff8edb);
}
#workitem1,
#workitem2 {
  width: 90vw;
  height: -webkit-fit-content;
  height: fit-content;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
}
#workitem1 > view,
#workitem2 > view {
  padding: 2vh 5vw;
  background: #ffffff;
  margin: 5px 0;
  border-radius: 15rpx;
}
#workitem1 text,
#workitem2 text {
  width: 80vw;
  display: block;
}
#workitem1 text:nth-of-type(1),
#workitem2 text:nth-of-type(1) {
  text-align: center;
  font-size: 32rpx;
  font-weight: 700;
  height: 65rpx;
  width: 80vw;
  margin: 0 auto;
  border-bottom: 1rpx solid #b1eaf5;
}
#workitem1 text:nth-of-type(2),
#workitem2 text:nth-of-type(2) {
  margin: 15rpx 0;
  font-size: 32rpx;
  font-weight: 500;
}
#workitem1 text:nth-of-type(3),
#workitem2 text:nth-of-type(3) {
  text-align: center;
  font-size: 28rpx;
  height: 55rpx;
  line-height: 55rpx;
  color: #797979;
  border-top: 1rpx solid #b1eaf5;
}
.work {
  width: 100vw;
  height: 100vh;
  box-sizing: border-box;
}
.work .work-swiper {
  height: 92vh;
  background-color: #d7f9ff;
}
.work .work-swiper .work-itemA {
  width: 100vw;
  height: 100%;
  margin-top: -2vh;
  padding: 0.5vh 0;
}
.work .work-swiper .work-itemA .options {
  width: inherit;
  height: 42px;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
  transition: all 0.6s;
  overflow: hidden;
  background-color: white;
}
.work .work-swiper .work-itemA .options button {
  padding: 0px;
  width: 10vh;
  height: 42px;
  border: 0rpx solid transparent;
  border-radius: 3rpx;
  margin: 0;
  display: inline-block;
}
.work .work-swiper .work-itemA .options button image {
  width: 4vh;
  height: 60rpx;
  margin-top: 12rpx;
  size: 100%;
}
.work .work-swiper .work-itemB {
  width: 100vw;
  height: 100%;
  background-color: #DBF1E1;
}

