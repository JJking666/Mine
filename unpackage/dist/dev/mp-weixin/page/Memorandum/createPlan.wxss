.linear_button {
  background-image: linear-gradient(to right bottom, #b28ff2, #00ACD7, #b892fb);
}
.linear_back {
  background-image: linear-gradient(to bottom, #51BDE7, #C6AEF1);
}
#filterImg {
  position: absolute;
  top: 0%;
  left: 0%;
  width: 100%;
  height: 100%;
  object-fit: cover;
  -webkit-filter: blur(8rpx);
          filter: blur(8rpx);
}
.radius-button {
  border: 1px solid transparent;
  border-radius: 4vh;
}
.box_shadow {
  box-shadow: 6rpx 6rpx 2rpx #b1eaf5;
}
.create {
  border: 1px solid transparent;
  border-radius: 50%;
  position: fixed;
  right: 4vw;
  bottom: 20vh;
  width: 15vw;
  height: 15vw;
  background-color: #51BDE7;
  padding: 2vw 2vw;
  box-sizing: border-box;
  border: 1rpx solid transparent;
  box-shadow: 0 0 55rpx 5rpx #4fafef;
}
.create image {
  width: 11vw;
  height: 11vw;
  size: 100%;
}
.buttonStyle1 {
  background-image: linear-gradient(to right bottom, #7867cc, #b7bafb);
}
.buttonStyle2 {
  background-image: linear-gradient(to right bottom, #c29df5, #9655fb);
}
.buttonStyle3 {
  background-image: linear-gradient(to right bottom, #a6f1ff, #4de9f9);
}
.buttonStyle4 {
  background-image: linear-gradient(to right bottom, #80e6a6, #fdf9cb);
}
.buttonStyle5 {
  background-image: linear-gradient(to right bottom, #fbcd74, #ff8e19);
}
.buttonStyle6 {
  background-image: linear-gradient(to right bottom, #75bffb, #0791ff);
}
.buttonStyle7 {
  background-image: linear-gradient(to right bottom, #ffdcfb, #ff8edb);
}
.createPlan {
  width: 100vw;
  height: 100vh;
  box-sizing: border-box;
  overflow: auto;
}
.createPlan .gobackPlan {
  width: 50vw;
  height: 8vh;
  margin: 0 auto;
  margin-top: 4vh;
  font-size: 36rpx;
  line-height: 8vh;
}
.createPlan #title {
  width: 100vw;
  height: 8vh;
  text-align: center;
  font-size: 46rpx;
  font-weight: 600;
}
.createPlan .createPlan-content {
  margin: 0 auto;
  margin-top: 2vh;
  width: 90vw;
  height: -webkit-fit-content;
  height: fit-content;
  background-color: #b1eaf5;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.createPlan .createPlan-content textarea {
  padding: 2vh 5vw;
  width: 100%;
  font-size: 32rpx;
  height: 65vh;
  white-space: wrap;
  line-height: 210%;
  box-sizing: border-box;
  text-decoration: underline;
}

