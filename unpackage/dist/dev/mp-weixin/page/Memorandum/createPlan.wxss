.radius-button {
  border: 1px solid transparent;
  border-radius: 2vh;
}
.create {
  border: 1px solid transparent;
  border-radius: 50%;
  position: fixed;
  right: 4vw;
  bottom: 20vh;
  width: 15vw;
  height: 15vw;
  background-color: #A0CFFF;
  padding: 0;
}
.create image {
  width: 15vw;
  height: 15vw;
  size: 100%;
}
.createPlan {
  width: 100vw;
  height: 100vh;
  box-sizing: border-box;
  overflow: auto;
}
.createPlan .gobackPlan {
  width: 50vw;
  height: 8vh;
  margin: 0 auto;
  margin-top: 4vh;
  font-size: 36rpx;
  line-height: 8vh;
}
.createPlan #title {
  width: 100vw;
  height: 8vh;
  text-align: center;
  font-size: 46rpx;
  font-weight: 600;
}
.createPlan .createPlan-content {
  margin: 0 auto;
  margin-top: 2vh;
  width: 90vw;
  height: -webkit-fit-content;
  height: fit-content;
  background-color: #DBF1E1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.createPlan .createPlan-content textarea {
  padding: 2vh 5vw;
  width: 100%;
  font-size: 32rpx;
  height: 65vh;
  white-space: wrap;
  line-height: 210%;
  box-sizing: border-box;
  text-decoration: underline;
}

