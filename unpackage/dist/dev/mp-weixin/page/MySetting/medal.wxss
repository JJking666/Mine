.radius-button {
  border: 1px solid transparent;
  border-radius: 2vh;
}
.create {
  border: 1px solid transparent;
  border-radius: 50%;
  position: fixed;
  right: 4vw;
  bottom: 20vh;
  width: 15vw;
  height: 15vw;
  background-color: #a7dab9;
  padding: 2vw 2vw;
  box-sizing: border-box;
  border: 1rpx solid #A5A5A5;
}
.create image {
  width: 11vw;
  height: 11vw;
  size: 100%;
}
.medal {
  width: 100vw;
  height: 100vh;
  padding: 2vh 5vw;
  box-sizing: border-box;
  position: relative;
}
.medal > image {
  position: absolute;
  left: 0;
  top: 0;
  width: inherit;
  height: inherit;
  z-index: -1;
  size: 100%;
}
.medal .content1 {
  box-sizing: border-box;
  margin-top: 2vh;
  width: 90vw;
  height: -webkit-fit-content;
  height: fit-content;
  background-color: #e8e8e8;
  border: 1rpx solid transparent;
  border-radius: 12rpx;
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 2vh 5vw;
}
.medal .content1 #head {
  width: 20vw;
  height: 10vh;
}
.medal .content1 #head image {
  width: 7vh;
  height: 7vh;
  size: 100%;
  border-radius: 100%;
}
.medal .content1 #content {
  width: 63vw;
  height: -webkit-fit-content;
  height: fit-content;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.medal .content1 #content text:nth-of-type(1) {
  font-size: 36rpx;
  font-weight: 500;
}
.medal .content1 #content text:nth-of-type(2) {
  font-size: 28rpx;
  display: block;
  margin-top: 1vw;
  color: #909193;
}
.medal .content1 #content .medals {
  width: 58vw;
  height: -webkit-fit-content;
  height: fit-content;
  margin-top: 1vh;
}
.medal .content1 #content .medals > image:nth-of-type(1) {
  margin-left: 0 !important;
}
.medal .content1 #content .medals > image:nth-of-type(7) {
  margin-left: 0 !important;
}
.medal .content1 #content .medals image {
  display: inline-block;
  width: 8vw;
  height: 8vw;
  size: 100%;
  margin-left: 2vw;
}
.medal .content2 {
  box-sizing: border-box;
  margin-top: 2vh;
  width: 90vw;
  height: -webkit-fit-content;
  height: fit-content;
  background-color: #e8e8e8;
  border: 1rpx solid transparent;
  border-radius: 12rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 2vh 5vw;
}
.medal .content2 image {
  width: 60vw;
  height: 9vh;
  size: 100%;
  display: block;
}
.medal .content2 .medals2 {
  width: 90vw;
  height: -webkit-fit-content;
  height: fit-content;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  padding: 2vh 5vw;
  box-sizing: border-box;
  flex-wrap: wrap;
}
.medal .content2 .medals2 > view {
  width: 25vw;
  height: 16vh;
  margin-left: 2.5vw;
  margin-top: 3vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.medal .content2 .medals2 > view image {
  width: 8vh;
  height: 8vh;
  size: 100%;
}
.medal .content2 .medals2 > view text {
  font-size: 32rpx;
}
.medal .content2 .medals2 > view:nth-of-type(3n+1) {
  margin-left: 0;
}

