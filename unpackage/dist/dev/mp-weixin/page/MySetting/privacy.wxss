.linear_button {
  background-image: linear-gradient(to right bottom, #b28ff2, #00ACD7, #b892fb);
}
.linear_back {
  background-image: linear-gradient(to bottom, #51BDE7, #C6AEF1);
}
#filterImg {
  position: absolute;
  top: 0%;
  left: 0%;
  width: 100%;
  height: 100%;
  object-fit: cover;
  -webkit-filter: blur(8rpx);
          filter: blur(8rpx);
}
.radius-button {
  border: 1px solid transparent;
  border-radius: 4vh;
}
.box_shadow {
  box-shadow: 6rpx 6rpx 2rpx #b1eaf5;
}
.create {
  border: 1px solid transparent;
  border-radius: 50%;
