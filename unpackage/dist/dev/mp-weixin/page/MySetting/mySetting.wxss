.radius-button {
  border: 1px solid transparent;
  border-radius: 2vh;
}
.create {
  border: 1px solid transparent;
  border-radius: 50%;
  position: fixed;
  right: 4vw;
  bottom: 20vh;
  width: 15vw;
  height: 15vw;
  background-color: #A0CFFF;
  padding: 0;
}
.create image {
  width: 15vw;
  height: 15vw;
  size: 100%;
}
.mysetting {
  height: 100vh;
  width: 100vw;
  background-color: #606266;
}
.mysetting .setting-nav {
  width: 100vw;
  height: 45vh;
  padding: 2vh 5vw;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  position: relative;
  color: white;
}
.mysetting .setting-nav > image:nth-of-type(1) {
  position: absolute;
  height: inherit;
  left: 0;
  top: 0;
  width: 100vw;
  size: 100%;
  object-fit: cover;
  z-index: 1;
}
.mysetting .setting-nav > image:nth-of-type(2) {
  height: 18vh;
  width: 18vh;
  border-radius: 100%;
  size: 100%;
  object-fit: cover;
  z-index: 10;
  margin-top: 8vh;
}
.mysetting .setting-nav .qianm {
  width: -webkit-fit-content;
  width: fit-content;
  max-width: 75vw;
  height: 6vh;
  z-index: 10;
  margin-top: 2vh;
}
.mysetting .setting-nav .qianm image {
  height: 4vh;
  width: 2vh;
  size: 100%;
  object-fit: cover;
  z-index: 10;
  display: inline-block;
}
.mysetting .setting-nav .qianm text {
  font-size: 28rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  z-index: 10;
}
.mysetting .setting-nav > text:nth-of-type(1) {
  font-size: 36rpx;
  font-weight: 600;
  z-index: 10;
  margin-top: 2vh;
  display: block;
  width: 18vh;
  text-align: center;
}
.mysetting .setting-nav .nav-something {
  z-index: 10;
  display: flex;
  flex-direction: row;
  margin-top: 1.5vh;
  color: white;
}
.mysetting .setting-nav .nav-something > text:nth-of-type(1) {
  font-size: 32rpx;
  font-weight: 500;
}
.mysetting .setting-nav .nav-something > text:nth-of-type(1)::after {
  content: '获赞';
  margin-left: 2vw;
}
.mysetting .setting-nav .nav-something > text:nth-of-type(2) {
  margin-left: 7vw;
  font-size: 32rpx;
  font-weight: 500;
}
.mysetting .setting-nav .nav-something > text:nth-of-type(2)::after {
  content: '关注';
  margin-left: 2vw;
}
.mysetting .setting-nav .nav-something text:nth-of-type(3) {
  margin-left: 7vw;
  font-size: 32rpx;
  font-weight: 500;
}
.mysetting .setting-nav .nav-something text:nth-of-type(3)::after {
  content: '粉丝';
  margin-left: 2vw;
}

