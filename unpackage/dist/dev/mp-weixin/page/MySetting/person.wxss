.linear_button {
  background-image: linear-gradient(to right bottom, #b28ff2, #00ACD7, #b892fb);
}
.linear_back {
  background-image: linear-gradient(to bottom, #51BDE7, #C6AEF1);
}
#filterImg {
  position: absolute;
  top: 0%;
  left: 0%;
  width: 100%;
  height: 100%;
  object-fit: cover;
  -webkit-filter: blur(8rpx);
          filter: blur(8rpx);
}
.radius-button {
  border: 1px solid transparent;
  border-radius: 4vh;
}
.box_shadow {
  box-shadow: 6rpx 6rpx 2rpx #b1eaf5;
}
.create {
  border: 1px solid transparent;
  border-radius: 50%;
  position: fixed;
  right: 4vw;
  bottom: 20vh;
  width: 15vw;
  height: 15vw;
  background-color: #51BDE7;
  padding: 2vw 2vw;
  box-sizing: border-box;
  border: 1rpx solid transparent;
  box-shadow: 0 0 55rpx 5rpx #4fafef;
}
.create image {
  width: 11vw;
  height: 11vw;
  size: 100%;
}
.buttonStyle1 {
  background-image: linear-gradient(to right bottom, #7867cc, #b7bafb);
}
.buttonStyle2 {
  background-image: linear-gradient(to right bottom, #c29df5, #9655fb);
}
.buttonStyle3 {
  background-image: linear-gradient(to right bottom, #a6f1ff, #4de9f9);
}
.buttonStyle4 {
  background-image: linear-gradient(to right bottom, #80e6a6, #fdf9cb);
}
.buttonStyle5 {
  background-image: linear-gradient(to right bottom, #fbcd74, #ff8e19);
}
.buttonStyle6 {
  background-image: linear-gradient(to right bottom, #75bffb, #0791ff);
}
.buttonStyle7 {
  background-image: linear-gradient(to right bottom, #ffdcfb, #ff8edb);
}
.person {
  width: 100vw;
  height: 100vh;
  padding: 2vh 5vw;
  box-sizing: border-box;
}
.person .content {
  width: 90vw;
  height: 96vh;
  border: 1rpx solid transparent;
  border-radius: 20rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.person .content > view {
  height: 4vh;
  width: 90vw;
  padding: 2vh 0;
  border-bottom: 1rpx solid #dedede;
}
.person .content > view text {
  line-height: 4vh;
  display: inline-block;
  font-size: 28rpx;
}
.person .content > view input {
  line-height: 4vh;
  display: inline-block;
  font-size: 28rpx;
  font-style: oblique;
}
.person .content > view image {
  margin-top: 0.5vh;
  float: right;
  line-height: 4vh;
  display: inline-block;
}
.person .content #account text, .person .content #account input {
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 4vh;
  height: 4vh;
  display: inline-block;
  width: 60vw;
  white-space: nowrap;
  font-size: 28rpx;
}
.person .content image {
  width: 3vh;
  height: 3vh;
  size: 100%;
}
.person .content #img {
  display: block;
  width: 10vh;
  height: 10vh;
  position: absolute;
  left: calc(45vw - 5vh);
  top: 5vh;
}
.person .content #dq {
  display: block;
  margin-top: 20vh;
  font-size: 36rpx;
  font-weight: 500;
  color: #8F939C;
}
input {
  font-weight: 800 !important;
  font-size: 32rpx !important;
  color: black;
}

