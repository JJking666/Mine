.account {
  width: 100vw;
  height: 100vh;
  padding: 2vh 5vw;
  box-sizing: border-box;
  background-color: #f5f5f5;
}
.account .content {
  background-color: #ffffff;
  width: 90vw;
  height: 96vh;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}
.account .content > view:nth-of-type(1) {
  margin-top: 3vh;
}
.account .content > text {
  display: block;
  margin-top: 1vh;
  margin-left: 5vw;
  font-size: 36rpx;
  font-weight: 600;
}
.account .content .content-item {
  height: 6vh;
  width: 90vw;
  padding: 1vh 5vw;
  box-sizing: border-box;
  border-bottom: 1rpx solid #efefef;
}
.account .content .content-item text {
  color: #696968;
  line-height: 4vh;
  display: inline-block;
  font-size: 28rpx;
}
.account .content .content-item image {
  width: 4vh;
  height: 4vh;
  size: 100%;
  float: right;
  line-height: 4vh;
  display: inline-block;
}
.account .content .content-item ._p {
  font-size: 28rpx;
  color: #000000;
  height: 4vh;
  float: right;
  line-height: 4vh;
  display: inline-block;
}

